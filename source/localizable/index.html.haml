---
title: Alpine Lab
priority: 1.0
layout: corporate
---

- content_for :description do
  = I18n.t('corporate.common.page-description')

- content_for :javascripts do
  :javascript
    $('.navbar ul.nav a, .navbar .brand a, .members .member a').bind('click',function(event){
        $('html, body').stop().animate({
            scrollTop: $($(this).attr('href')).offset().top - 100
        }, 300);
        event.preventDefault();
    });


.container.full-width

  = partial 'about'
  = partial 'what_we_do'
  = partial 'customers'
  = partial 'team'
  = partial 'commitments'
  = partial 'projects'

  %section#hire-us
    .logo
      = image_tag('logo-alpinelab-mirroreffect.png', width: '87px', height: '88px')
    .address
      = I18n.t('corporate.common.address_html')
    %a.hire-us-btn{href: "mailto:dahu@alpine-lab.com?subject=#{I18n.t('corporate.common.email-subject')}", target: :_blank}
      = I18n.t('corporate.common.hire-us_html')

#push
