---
title: Alpine Lab
priority: 1.0
layout: corporate
---

- content_for :description do
  = I18n.t('corporate.common.page-description')

- content_for :javascripts do
  :javascript
    $('.navbar ul.nav a, .navbar .brand a, .members .member a').bind('click',function(event){
        $('html, body').stop().animate({
            scrollTop: $($(this).attr('href')).offset().top - 100
        }, 300);
        event.preventDefault();
    });


.container.full-width

  = partial 'about'
  = partial 'what_we_do'
  = partial 'customers'
  = partial 'team'
  = partial 'commitments'
  = partial 'projects'

  .container
    %section#hire-us
      .row-fluid
        .span9
          %h1.animate
            = I18n.t('corporate.common.you-have-a-project')
        .span3
          %h1
            %a.btn.btn-large.btn-danger{href: "mailto:dahu@alpine-lab.com?subject=#{I18n.t('corporate.common.email_subject')}", target: :_blank}
              = I18n.t('corporate.common.hire-us_html')

#push
