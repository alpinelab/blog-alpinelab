- if I18n.locale == :fr
  /[if lt IE 7 ] <html class="ie6" lang="fr">
  /[if IE 7 ]    <html class="ie7" lang="fr">
  /[if IE 8 ]    <html class="ie8" lang="fr">
  /[if IE 9 ]    <html class="ie9" lang="fr">
  /[if (gt IE 9)|!(IE)] <!--> <html lang="fr">
- elsif I18n.locale == :en
  /[if lt IE 7 ] <html class="ie6" lang="en">
  /[if IE 7 ]    <html class="ie7" lang="en">
  /[if IE 8 ]    <html class="ie8" lang="en">
  /[if IE 9 ]    <html class="ie9" lang="en">
  /[if (gt IE 9)|!(IE)] <!--> <html lang="en">

%head{prefix: "og: http://ogp.me/ns# fb: http://ogp.me/ns/fb#"}
  %title= yield_content(:title) || current_page.data.title
  %meta{:'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
  %meta{charset:  'utf-8'                                                                                       }
  %meta{name:     'description',    content: (yield_content(:description) || current_page.data.description)     }
  %meta{name:     'viewport',       content: 'width=device-width, initial-scale=1.0'                            }
  %meta{property: 'og:title',       content: (yield_content(:title) || current_page.data.title)                 }
  %meta{property: 'og:description', content: (yield_content(:description) || current_page.data.description)     }
  %meta{property: 'og:locale',      content: "#{I18n.locale}_#{I18n.locale.upcase}"                             }
  %meta{property: 'og:site_name',   content: 'Alpine Lab'                                                       }
  %meta{property: 'og:url',         content: "http://www.alpine-lab.com#{current_page.url}"                     }
  %meta{property: 'og:image',       content: "http://www.alpine-lab.com#{image_path('logo-alpinelab-500.png')}" }
  %meta{property: 'og:type',        content: (yield_content(:og_type) || 'website')                             }
  = yield_content :og_article

  %link{rel: "apple-touch-icon", sizes: "144x144",  href: "apple-touch-icon-144x144-precomposed.png" }
  %link{rel: "apple-touch-icon", sizes: "114x114",  href: "apple-touch-icon-114x114-precomposed.png" }
  %link{rel: "apple-touch-icon", sizes: "72x72",    href: "apple-touch-icon-72x72-precomposed.png" }
  %link{rel: "apple-touch-icon",                    href: "apple-touch-icon-precomposed.png" }
  %link{rel: "shortcut icon",                       href: "favicon.png" }
  %link{rel: "icon",             type: "image/ico", href: "favicon.ico" }

  %link{rel: :stylesheet, type: 'text/css', href: 'http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic'}
  %link{rel: :stylesheet, type: 'text/css', href: 'http://fonts.googleapis.com/css?family=BenchNine:300,400,700&subset=latin,latin-ext'}

  = stylesheet_link_tag 'normalize'
  = stylesheet_link_tag 'main'
  = yield_content :stylesheets

%body{itemscope: true, itemtype: "http://schema.org/Blog", data: {spy: :scroll, target: 'header.navbar', offset: 50}}

  = yield

  = javascript_include_tag 'vendor/modernizr-2.6.1.min'
  = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'
  :javascript
    window.jQuery || document.write('<script src="/js/vendor/jquery-1.9.1.min.js"><\/script>')
  = javascript_include_tag 'plugins'
  = javascript_include_tag 'main'

  = yield_content(:javascripts)

