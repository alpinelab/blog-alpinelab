- content_for :stylesheets do
  = stylesheet_link_tag 'blog'

- wrap_layout :layout do
  %meta{itemprop: "name", content: "Alpine Lab, blog technique"}
  %meta{itemprop: "description", content: "On parle de développement web, d'entreprenariat, de Ruby/Rails, de Haml/Slim, de Sass, de CoffeeScript et d'Ember.js"}
  %meta{itemprop: "url", content: "http://www.alpine-lab.com/blog"}
  %meta{itemprop: "inLanguage", content: "fr"}
  %meta{itemprop: "image", content: "http://www.alpine-lab.com#{image_path('logo-alpinelab-500.png')}"}

  #wrapper
    %header
      = link_to '/blog' do
        .logo
        %h1.sitename
          %span.alpine> Alpine
          %span.lab Lab
          %span.blog blog technique
      .social-networks
        = link_to 'https://github.com/alpinelab', :target => :_blank do
          %i.icon-github
        = link_to 'http://pinterest.com/AlpineLab/', :target => :_blank do
          %i.icon-pinterest
        = link_to 'https://twitter.com/alpinelab', :target => :_blank do
          %i.icon-twitter
        = link_to 'https://plus.google.com/103306769618245403420', :target => :_blank do
          %i.icon-google-plus-sign
        = link_to 'https://facebook.com/alpinelab', :target => :_blank do
          %i.icon-facebook-sign
    %nav
      %ul
        = link_to '/blog/alpine-lab.html' do
          %li Alpine lab
    #main
      ~ yield
    #end-of-main
  %footer
    %p
      Le blog d'#{link_to 'Alpine Lab', 'https://plus.google.com/103306769618245403420', {:rel => 'publisher'}}
      est publié sous license #{link_to 'Creative Commons Attribution 3.0 (cc-by-3.0)', 'http://creativecommons.org/licenses/by/3.0/fr/'}.
      Le code est sous licence #{link_to 'MIT', 'http://opensource.org/licenses/MIT'}.
